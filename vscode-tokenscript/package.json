{
  "name": "tokenscript-vscode",
  "displayName": "TokenScript Language Support",
  "description": "Syntax highlighting and language support for TokenScript",
  "version": "0.1.0",
  "publisher": "tokenscript",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:tokenscript"
  ],
  "contributes": {
    "languages": [
      {
        "id": "tokenscript",
        "aliases": [
          "TokenScript",
          "tokenscript"
        ],
        "extensions": [
          ".tokenscript",
          ".ts"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "tokenscript",
        "scopeName": "source.tokenscript",
        "path": "./syntaxes/tokenscript.tmLanguage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  }
}