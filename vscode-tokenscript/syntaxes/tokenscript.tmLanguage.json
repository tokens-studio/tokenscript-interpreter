{
  "name": "TokenScript",
  "scopeName": "source.tokenscript",
  "patterns": [
    { "include": "#comments" },
    { "include": "#keywords" },
    { "include": "#strings" },
    { "include": "#numbers" },
    { "include": "#colors" },
    { "include": "#units" },
    { "include": "#operators" },
    { "include": "#identifiers" }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.double-slash.tokenscript",
          "match": "//.*$"
        }
      ]
    },
    "keywords": {
      "patterns": [
        {
          "name": "keyword.control.tokenscript",
          "match": "\\b(if|else|for|in|while|do|break|continue|return)\\b"
        },
        {
          "name": "keyword.other.tokenscript",
          "match": "\\b(variable|function|var|let|const)\\b"
        },
        {
          "name": "constant.language.tokenscript",
          "match": "\\b(true|false|null|undefined)\\b"
        }
      ]
    },
    "strings": {
      "patterns": [
        {
          "name": "string.quoted.double.tokenscript",
          "begin": "\"",
          "end": "\"",
          "patterns": [
            {
              "name": "constant.character.escape.tokenscript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.quoted.single.tokenscript",
          "begin": "'",
          "end": "'",
          "patterns": [
            {
              "name": "constant.character.escape.tokenscript",
              "match": "\\\\."
            }
          ]
        },
        {
          "name": "string.template.tokenscript",
          "begin": "`",
          "end": "`",
          "patterns": [
            {
              "name": "constant.character.escape.tokenscript",
              "match": "\\\\."
            },
            {
              "name": "meta.template.expression.tokenscript",
              "begin": "\\$\\{",
              "end": "\\}",
              "patterns": [{ "include": "$self" }]
            }
          ]
        }
      ]
    },
    "numbers": {
      "patterns": [
        {
          "name": "constant.numeric.float.tokenscript",
          "match": "\\b\\d*\\.\\d+([eE][-+]?\\d+)?\\b"
        },
        {
          "name": "constant.numeric.integer.tokenscript",
          "match": "\\b\\d+\\b"
        }
      ]
    },
    "colors": {
      "patterns": [
        {
          "name": "constant.numeric.color.hex.tokenscript",
          "match": "#([0-9a-fA-F]{3}|[0-9a-fA-F]{6}|[0-9a-fA-F]{8})\\b"
        },
        {
          "name": "support.function.color.tokenscript",
          "match": "\\b(rgb|rgba|hsl|hsla)\\("
        }
      ]
    },
    "units": {
      "patterns": [
        {
          "name": "constant.numeric.unit.tokenscript",
          "match": "\\d+(\\.\\d+)?(px|em|rem|vh|vw|%|deg|rad|turn)\\b"
        }
      ]
    },
    "operators": {
      "patterns": [
        {
          "name": "keyword.operator.tokenscript",
          "match": "(\\+|\\-|\\*|\\/|%|\\^|==|!=|<=|>=|<|>|&&|\\|\\||!|=)"
        }
      ]
    },
    "identifiers": {
      "patterns": [
        {
          "name": "variable.other.tokenscript",
          "match": "\\b[a-zA-Z_$][\\w$]*\\b"
        }
      ]
    }
  }
}
