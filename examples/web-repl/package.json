{
  "name": "tokenscript-web-repl",
  "version": "1.0.0",
  "description": "Web-based REPL for TokenScript interpreter",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "dev:watch": "npm-run-all --parallel dev:lib dev:vite",
    "dev:lib": "cd ../../ && npm run build:watch",
    "dev:vite": "vite",
    "build": "cd ../../ && npm run build && cd examples/web-repl && vite build",
    "build:with-tsc": "cd ../../ && npm run build && tsc && vite build",
    "preview": "vite preview",
    "lint": "biome lint --max-diagnostics=none .",
    "lint:fix": "biome lint --write .",
    "format": "biome format --write .",
    "format:check": "biome format .",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "playwright:install": "playwright install"
  },
  "dependencies": {
    "@monaco-editor/react": "^4.7.0",
    "@tokens-studio/tokenscript-interpreter": "file:../../",
    "@types/prismjs": "^1.26.5",
    "monaco-editor": "^0.53.0",
    "prismjs": "^1.30.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@playwright/test": "^1.49.1",
    "@types/react": "^18.3.12",
    "@types/react-dom": "^18.3.1",
    "@vitejs/plugin-react": "^4.3.4",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.9.2",
    "vite": "^6.0.7"
  }
}
